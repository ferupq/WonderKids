{
  "expo": {
    "name": "AwesomeProject",
    "slug": "AwesomeProject",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Tu aplicación necesita acceso al micrófono para el reconocimiento de voz.",
        "NSSpeechRecognitionUsageDescription": "Tu aplicación necesita acceso al reconocimiento de voz."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff",
         "permissions": [
        "RECORD_AUDIO",
        "INTERNET"
      ]
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
